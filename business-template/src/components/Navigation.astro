---
import { businessConfig } from "../config/branding";

interface NavItem {
  name: string;
  href: string;
}

const navItems: NavItem[] = [
  { name: "Home", href: "/" },
  { name: "Services", href: "/services" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
];
---

<header class="bg-accent-dark relative z-30">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Top">
    <div
      class="w-full py-4 md:py-6 flex items-center justify-between border-b border-accent-dark lg:border-none"
    >
      <div class="flex items-center">
        <a href="/" class="flex-shrink-0 mr-1 flex items-center">
          <img
            src="/images/header_logo_white.png"
            alt={businessConfig.name}
            class="h-10 md:h-16 w-auto object-contain theme-logo-white"
          />
          <img
            src="/images/header_logo_black.png"
            alt={businessConfig.name}
            class="h-10 md:h-16 w-auto object-contain theme-logo-black"
          />
          <span class="sr-only">{businessConfig.name}</span>
        </a>
        <div class="hidden ml-10 space-x-4 lg:flex lg:space-x-8">
          {
            navItems.map((item) => (
              <a
                href={item.href}
                class="text-base font-medium text-background hover:text-accent"
              >
                {item.name}
              </a>
            ))
          }
        </div>
      </div>
      <div class="hidden lg:flex items-center space-x-4">
        <button
          id="theme-toggle"
          class="inline-block bg-background py-2 px-4 border border-transparent rounded-md text-base font-medium text-accent-dark hover:bg-background/90"
          aria-label="Toggle theme"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 inline-block mr-1"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"
            ></path>
          </svg>
          <span id="theme-toggle-text">Pastel Theme</span>
        </button>
        <a
          href="/contact"
          class="inline-block bg-secondary py-2 px-4 border border-transparent rounded-md text-base font-medium text-background hover:bg-primary"
        >
          Free Consultation
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="flex items-center lg:hidden">
        <div class="flex items-center space-x-2">
          <button
            id="theme-toggle-small"
            class="inline-flex items-center justify-center p-2 rounded-md bg-background text-accent-dark"
            aria-label="Toggle theme"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"
              ></path>
            </svg>
          </button>
          <button
            type="button"
            class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-white hover:text-gray-200 hover:bg-accent-dark/80 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary"
            aria-expanded="false"
          >
            <span class="sr-only">Open main menu</span>
            <!-- Icon when menu is closed -->
            <svg
              class="block h-6 w-6"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <!-- Icon when menu is open -->
            <svg
              class="hidden h-6 w-6"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile menu, show/hide based on menu state -->
    <div class="mobile-menu hidden lg:hidden">
      <div class="py-3 space-y-1">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-white hover:bg-background hover:border-primary hover:text-primary"
            >
              {item.name}
            </a>
          ))
        }
        <a
          href="/contact"
          class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-bold text-white bg-secondary hover:bg-primary hover:border-primary"
        >
          Free Consultation
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener("DOMContentLoaded", () => {
    const button = document.querySelector(".mobile-menu-button");
    const menu = document.querySelector(".mobile-menu");
    const iconOpen = button?.querySelector("svg:first-child");
    const iconClosed = button?.querySelector("svg:last-child");

    button?.addEventListener("click", () => {
      menu?.classList.toggle("hidden");
      iconOpen?.classList.toggle("hidden");
      iconClosed?.classList.toggle("hidden");
    });

    // Theme toggle functionality
    const themeToggle = document.getElementById("theme-toggle");
    const themeToggleSmall = document.getElementById("theme-toggle-small");
    const themeToggleMobile = document.getElementById("theme-toggle-mobile");
    const themeToggleText = document.getElementById("theme-toggle-text");
    const themeToggleMobileText = document.getElementById(
      "theme-toggle-mobile-text",
    );

    // Theme names map
    const themeNames = {
      nature: "Nature Theme",
      pastel: "Pastel Theme",
      forest: "Forest Theme",
      coastal: "Coastal Theme",
    };

    // Set button text to current theme name
    const updateThemeText = (themeName: string) => {
      const displayName =
        themeNames[themeName as keyof typeof themeNames] ||
        themeNames["nature"];
      if (themeToggleText) themeToggleText.textContent = displayName;
      if (themeToggleMobileText)
        themeToggleMobileText.textContent = displayName;
    };

    const cycleThemes = () => {
      const root = document.documentElement;
      const currentTheme = root.getAttribute("data-theme") || "nature";

      // Cycle through themes: nature -> pastel -> forest -> coastal -> nature
      let nextTheme;
      switch (currentTheme) {
        case "nature":
          nextTheme = "pastel";
          break;
        case "pastel":
          nextTheme = "forest";
          break;
        case "forest":
          nextTheme = "coastal";
          break;
        case "coastal":
          nextTheme = "nature";
          break;
        default:
          nextTheme = "nature";
      }

      // Apply the next theme
      root.setAttribute("data-theme", nextTheme);

      // Save to localStorage
      localStorage.setItem("theme", nextTheme);

      // Update button text
      updateThemeText(nextTheme);
    };

    // Check for saved theme preference or use nature as default
    const savedTheme = localStorage.getItem("theme") || "nature";
    document.documentElement.setAttribute("data-theme", savedTheme);

    // Initialize theme text
    updateThemeText(savedTheme);

    themeToggle?.addEventListener("click", cycleThemes);
    themeToggleSmall?.addEventListener("click", cycleThemes);
    themeToggleMobile?.addEventListener("click", cycleThemes);
  });
</script>
