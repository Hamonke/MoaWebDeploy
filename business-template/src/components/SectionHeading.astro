---
interface Props {
  title: string;
  subtitle?: string;
  alignment?: "left" | "center" | "right";
  class?: string;
  titleColor?: string;
}

const {
  title,
  subtitle,
  alignment = "center",
  class: className = "",
  titleColor = "text-accent",
} = Astro.props;

let alignmentClasses = "";
switch (alignment) {
  case "left":
    alignmentClasses = "text-left";
    break;
  case "right":
    alignmentClasses = "text-right";
    break;
  default:
    alignmentClasses = "text-center";
}
---

<div class={`max-w-4xl mx-auto ${alignmentClasses} ${className}`}>
  <h2 class={`text-3xl font-bold tracking-tight ${titleColor} sm:text-4xl`}>
    {title}
  </h2>
  {
    subtitle && (
      <p class="mt-4 max-w-2xl text-xl text-primary mx-auto">{subtitle}</p>
    )
  }
</div>
