---
import Layout from "../layouts/Layout.astro";
import { businessConfig } from "../config/branding";
import { contactContent } from "../config/content";
import Section from "../components/Section.astro";
import Container from "../components/Container.astro";
import SectionHeading from "../components/SectionHeading.astro";
import Card from "../components/Card.astro";
import Button from "../components/Button.astro";
---

<Layout title="Contact Us">
	<!-- Hero Section -->
	<Section background="primary" paddingY="lg">
		<Container>
			<div class="text-center">
				<h1
					class="text-4xl font-bold tracking-tight sm:text-5xl mb-6 text-background"
				>
					{contactContent.hero.title}
				</h1>
				<p class="text-xl mb-8 text-accent max-w-3xl mx-auto">
					{contactContent.hero.subtitle}
				</p>
			</div>
		</Container>
	</Section>

	<!-- Contact Info and Form Section -->
	<Section background="cream" paddingY="lg">
		<Container>
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
				<!-- Contact Form -->
				<div>
					<Card
						shadow="lg"
						class="p-2 border border-primary-light/20 rounded-xl bg-white"
					>
						<div class="p-6">
							<h2 class="text-2xl font-bold mb-6 text-primary">
								{contactContent.form.title}
							</h2>
							<p class="text-primary/80 mb-6">
								{contactContent.form.subtitle}
							</p>
							<form class="space-y-6">
								<div
									class="grid grid-cols-1 md:grid-cols-2 gap-4"
								>
									<div>
										<label
											for="name"
											class="block text-sm font-medium text-gray-700"
											>{contactContent.form.fields.name}
											<span class="text-accent">*</span
											></label
										>
										<input
											type="text"
											name="name"
											id="name"
											required
											class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
										/>
									</div>

									<div>
										<label
											for="email"
											class="block text-sm font-medium text-gray-700"
											>{contactContent.form.fields.email}
											<span class="text-accent">*</span
											></label
										>
										<input
											type="email"
											name="email"
											id="email"
											required
											class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
										/>
									</div>
								</div>

								<div
									class="grid grid-cols-1 md:grid-cols-2 gap-4"
								>
									<div>
										<label
											for="phone"
											class="block text-sm font-medium text-gray-700"
											>{
												contactContent.form.fields.phone
											}</label
										>
										<input
											type="tel"
											name="phone"
											id="phone"
											class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
										/>
									</div>

									<div>
										<label
											for="service"
											class="block text-sm font-medium text-gray-700"
											>{
												contactContent.form.fields
													.service
											}</label
										>
										<select
											name="service"
											id="service"
											class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
										>
											<option value=""
												>Please select...</option
											>
											<option value="Business Website"
												>Business Website</option
											>
											<option value="E-Commerce Website"
												>E-Commerce Website</option
											>
											<option value="Custom Application"
												>Custom Application</option
											>
											<option value="Other"
												>Other Inquiry</option
											>
										</select>
									</div>
								</div>

								<div>
									<label
										for="company"
										class="block text-sm font-medium text-gray-700"
										>{
											contactContent.form.fields.company
										}</label
									>
									<input
										type="text"
										name="company"
										id="company"
										class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
									/>
								</div>

								<div class="sm:col-span-2">
									<label
										for="message"
										class="block text-sm font-medium text-gray-700"
										>{contactContent.form.fields.message}
										<span class="text-accent">*</span
										></label
									>
									<textarea
										id="message"
										name="message"
										rows="4"
										required
										class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
									></textarea>
								</div>

								<div class="sm:col-span-2">
									<label
										for="budget"
										class="block text-sm font-medium text-gray-700"
										>{contactContent.form.fields.budget}
										<span class="text-accent">*</span
										></label
									>
									<select
										id="budget"
										name="budget"
										required
										class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
									>
										<option value=""
											>Please select...</option
										>
										<option value="Under $5,000"
											>Under $5,000</option
										>
										<option value="$5,000 - $10,000"
											>$5,000 - $10,000</option
										>
										<option value="$10,000 - $20,000"
											>$10,000 - $20,000</option
										>
										<option value="$20,000 - $50,000"
											>$20,000 - $50,000</option
										>
										<option value="$50,000 - $100,000"
											>$50,000 - $100,000</option
										>
										<option value="$100,000+"
											>$100,000+</option
										>
									</select>
								</div>

								<div class="sm:col-span-2">
									<div class="flex items-center">
										<input
											id="privacy"
											name="privacy"
											type="checkbox"
											required
											class="h-3.5 w-3.5 text-primary focus:ring-primary border-gray-300 rounded"
										/>
										<label
											for="privacy"
											class="ml-2 block text-sm text-gray-700"
										>
											I agree to the <a
												href="/privacy"
												class="text-primary hover:underline"
												>privacy policy</a
											> and consent to being contacted regarding
											my inquiry.
										</label>
									</div>
								</div>

								<div>
									<Button
										type="submit"
										variant="primary"
										class="bg-primary hover:bg-primary-light text-cream transition-colors"
										fullWidth={true}
									>
										{contactContent.form.fields.submit}
									</Button>
								</div>

								<p class="text-sm text-gray-500 text-center">
									We respect your privacy and will never share
									your information.
								</p>
							</form>
						</div>
					</Card>
				</div>

				<!-- Contact Information -->
				<div>
					<h2
						class="text-3xl font-bold tracking-tight sm:text-4xl mb-6 text-primary"
					>
						{contactContent.contact.title}
					</h2>
					<p class="text-primary/80 mb-8">
						Get in touch with us via phone, email, or visit our
						office in Christchurch
					</p>

					<div
						class="bg-white p-6 rounded-lg mb-8 border border-primary-light/20"
					>
						{
							contactContent.contact.items.map((item) => (
								<div class="flex items-start mb-6 last:mb-0">
									<div class="flex-shrink-0 bg-cream p-2 rounded-full">
										{item.icon === "email" && (
											<svg
												class="h-6 w-6 text-blue-600"
												fill="none"
												viewBox="0 0 24 24"
												stroke="currentColor"
											>
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
												/>
											</svg>
										)}
										{item.icon === "phone" && (
											<svg
												class="h-6 w-6 text-blue-600"
												fill="none"
												viewBox="0 0 24 24"
												stroke="currentColor"
											>
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
												/>
											</svg>
										)}
										{item.icon === "location" && (
											<svg
												class="h-6 w-6 text-blue-600"
												fill="none"
												viewBox="0 0 24 24"
												stroke="currentColor"
											>
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
												/>
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
												/>
											</svg>
										)}
									</div>
									<div class="ml-4">
										<p class="text-lg font-medium text-primary">
											{item.label}
										</p>
										<p class="text-primary/80">
											{item.value}
										</p>
									</div>
								</div>
							))
						}
					</div>

					<!-- Business Hours -->
					<div
						class="bg-white p-6 rounded-lg border border-primary-light/20"
					>
						<h3 class="text-lg font-medium text-primary mb-4">
							Business Hours
						</h3>
						<ul class="space-y-2">
							{
								businessConfig.hours.map((item) => (
									<li class="flex justify-between text-primary/80">
										<span>{item.day}</span>
										<span>{item.hours}</span>
									</li>
								))
							}
						</ul>
					</div>
				</div>
			</div>
		</Container>
	</Section>

	<!-- Map Section -->
	<Section background="primary-light" paddingY="lg">
		<Container>
			<div class="rounded-lg overflow-hidden shadow-md h-96 bg-white">
				<!-- Replace with your iframe map code -->
				<div class="h-full w-full flex items-center justify-center">
					<p class="text-primary/70">
						Interactive map will be displayed here
					</p>
				</div>
			</div>
		</Container>
	</Section>

	<!-- CTA Section -->
	<Section background="secondary" paddingY="lg">
		<Container size="md">
			<div class="text-center">
				<h2
					class="text-3xl font-bold tracking-tight sm:text-4xl mb-4 text-cream"
				>
					Ready to Get Started?
				</h2>
				<p class="text-xl mb-8 text-cream/90">
					Fill out the form above or give us a call to discuss your
					website needs.
				</p>
				<Button
					href="tel:03-555-1234"
					variant="primary"
					class="bg-primary hover:bg-secondary text-background transition-colors"
					size="lg"
				>
					Call Us Today
				</Button>
			</div>
		</Container>
	</Section>
</Layout>
